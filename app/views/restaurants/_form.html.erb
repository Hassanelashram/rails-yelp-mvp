


<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: @cats %>
        <%= f.input :phone_number %>
        <%= f.button :submit, class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
