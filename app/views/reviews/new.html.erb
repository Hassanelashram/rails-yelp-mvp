<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.button :submit, class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
